{
  "name": "@power-assert/node",
  "version": "0.1.0",
  "description": "Node.js custom hook for power-assert",
  "author": {
    "name": "Takuto WADA",
    "email": "takuto.wada@gmail.com",
    "url": "https://github.com/twada"
  },
  "homepage": "https://github.com/twada/power-assert-monorepo",
  "bugs": "https://github.com/twada/power-assert-monorepo/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/twada/power-assert-monorepo.git",
    "directory": "packages/node"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/register.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/register.d.mts",
        "default": "./dist/register.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist",
    "!**/__tests__",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "power-assert",
    "assert",
    "assertion",
    "test",
    "testing"
  ],
  "dependencies": {
    "@power-assert/transpiler": "^0.3.0"
  },
  "peerDependencies": {
    "@power-assert/runtime": "^0.2.0"
  },
  "scripts": {
    "build:clean": "rimraf dist && rm -f tsconfig.tsbuildinfo",
    "lint": "eslint src",
    "fix": "npm run lint:src -- --fix",
    "test": "node --enable-source-maps --import @power-assert/node --test examples/bowling.test.mjs | grep 'examples/bowling.test.mjs:297:7'",
    "example": "npm run power:example",
    "power": "node --enable-source-maps --import @power-assert/node --test --",
    "power:example": "npm run power examples/bowling.test.mjs",
    "spike": "TS_NODE_PROJECT='./tsconfig.tsnode.json' node --no-warnings --enable-source-maps --loader ts-node/node --import @power-assert/node --test --test-reporter=spec --",
    "ts-node:power": "npm run test:ts --import @power-assert/node --",
    "ts-node:power:example": "TS_NODE_PROJECT='./tsconfig.tsnode.json' node --test --enable-source-maps --no-warnings --loader ts-node/esm --import @power-assert/node examples/spike/spike_test.mts",
    "test:ts": "TS_NODE_PROJECT='./tsconfig.tsnode.json' node --test --enable-source-maps --no-warnings --loader ts-node/esm --"
  }
}
