{
  "name": "@power-assert/swc-plugin-power-assert",
  "version": "0.0.0",
  "description": "power-assert SWC plugin",
  "author": {
    "name": "Takuto WADA",
    "email": "takuto.wada@gmail.com",
    "url": "https://github.com/twada"
  },
  "license": "MIT",
  "keywords": [
    "swc-plugin",
    "power-assert"
  ],
  "main": "./swc_plugin_power_assert.wasm",
  "files": [
    "swc_plugin_power_assert.wasm",
    "src",
    "Cargo.toml",
    "package.json"
  ],
  "preferUnplugged": true,
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.96"
  },
  "scripts": {
    "example": "RUST_BACKTRACE=1 swc ./examples/bowling.test.mjs -o ./tmp/bowling.test.mjs && node --test --enable-source-maps ./tmp/bowling.test.mjs",
    "build": "npm run build:cargo && npm run build:cp",
    "build:cargo": "cargo build-wasi --release",
    "build:cp": "cp ../../target/wasm32-wasi/release/swc_plugin_power_assert.wasm ./swc_plugin_power_assert.wasm",
    "prepublishOnly": "cargo build-wasi --release",
    "prepack": "cargo prepublish --release && npm run build:cp"
  }
}
