{
  "name": "@power-assert/runtime",
  "version": "0.3.0",
  "description": "power-assert runtime",
  "author": {
    "name": "Takuto WADA",
    "email": "takuto.wada@gmail.com",
    "url": "https://github.com/twada"
  },
  "homepage": "https://github.com/twada/power-assert-monorepo",
  "bugs": "https://github.com/twada/power-assert-monorepo/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/twada/power-assert-monorepo.git",
    "directory": "packages/runtime"
  },
  "license": "MIT",
  "keywords": [
    "power-assert",
    "assert",
    "assertion"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/runtime.mjs",
  "exports": {
    ".": {
      "module-sync": {
        "types": "./dist/runtime.d.mts",
        "dev": "./src/runtime.mts",
        "default": "./dist/runtime.mjs"
      },
      "import": {
        "types": "./dist/runtime.d.mts",
        "dev": "./src/runtime.mts",
        "default": "./dist/runtime.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "CHANGELOG.md",
    "src",
    "dist",
    "!**/__tests__",
    "package.json"
  ],
  "scripts": {
    "build:clean": "rimraf dist && rimraf .tsimp && rm -f tsconfig.tsbuildinfo",
    "lint": "eslint src",
    "fix": "npm run lint -- --fix",
    "test": "node --conditions=dev --test 'src/**/__tests__/**/*test.mts'"
  }
}
