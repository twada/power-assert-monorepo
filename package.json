  "type": "module",
  "devDependencies": {
    "@twada/benchmark-commits": "^0.5.0",
    "@types/convert-source-map": "^2.0.0",
    "@types/estree": "^1.0.1",
    "@types/multi-stage-sourcemap": "^0.3.0",
    "@types/node": "^24.0.0",
    "depcheck": "^1.4.7",
