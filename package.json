  },
  "scripts": {
    "prepack": "npm run rebuild",
    "rebuild": "npm run lint && npm run clean:all && npm run compile && npm run test:dist",
    "clean:all": "npm run build:clean --workspaces --if-present",
    "lint": "eslint 'packages/**/src/**/*.mts'",
    "lint:fix": "eslint --fix 'packages/**/src/**/*.mts'",
    "compile": "tsc --build tsconfig.build.json",
    "test:dist": "node --test --test-reporter=dot 'packages/**/dist/**/*_test.mjs'",
    "test:prove": "prove --exec 'node --conditions=dev --test --test-reporter=tap' -r packages --ext=_test.mts",
    "test:dev": "node --conditions=dev --test --test-reporter=dot 'packages/**/src/**/__tests__/**/*_test.mts'",
    "test": "npm run lint && npm run test:dev"
  },
  "workspaces": [
    "packages/transpiler-core",
    "packages/transpiler",
    "packages/runtime",
    "packages/node",
    "packages/esbuild-plugin-power-assert",
    "packages/rollup-plugin-power-assert",
    "packages/swc-plugin-power-assert",
    "packages/integration-tests"
  ]
