{
  "name": "@power-assert/monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "files": [
    "src",
    "dist",
    "package.json"
  ],
  "devDependencies": {
    "@types/convert-source-map": "^2.0.0",
    "@types/estraverse": "^5.1.2",
    "@types/estree": "^1.0.1",
    "@types/multi-stage-sourcemap": "^0.3.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.39.0",
    "eslint-config-semistandard": "^17.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "test": "npm run clean:all && npm run lint:all && npm run build:all && npm run test:all",
    "clean:all": "npm run build:clean --workspaces",
    "lint:all": "npm run lint --workspaces",
    "build:all": "tsc --build tsconfig.build.json",
    "test:all": "node --no-warnings --test --test-reporter=dot 'packages/**/dist/**/*test.mjs'",
    "prove": "prove --exec 'node --no-warnings --test --test-reporter=tap' -r packages --ext=test.mjs",
    "spike": "TS_NODE_PROJECT='./tsconfig.tsnode.json' node --no-warnings --enable-source-maps --loader ts-node/esm --loader @power-assert/esm --test --test-reporter=spec --",
    "example": "npm run build && npm run power:example",
    "power": "node --enable-source-maps --no-warnings --loader @power-assert/esm --test --",
    "power:example": "npm run power examples/bowling_test.mjs",
    "sourcemap": "npm run power:example | grep 'examples/bowling_test.mjs:297:7' || echo 'FAIL'",
    "ts-node:power": "npm run test:ts --loader @power-assert/esm --",
    "ts-node:power:example": "TS_NODE_PROJECT='./tsconfig.tsnode.json' node --test --enable-source-maps --no-warnings --loader ts-node/esm --loader @power-assert/esm examples/spike/spike_test.mts",
    "test:ts": "TS_NODE_PROJECT='./tsconfig.tsnode.json' node --test --enable-source-maps --no-warnings --loader ts-node/esm --"
  },
  "workspaces": [
    "packages/transpiler",
    "packages/transpiler-core",
    "packages/runtime",
    "packages/esm",
    "packages/integration-tests",
    "packages/vitest-plugin",
    "packages/esbuild-plugin",
    "packages/rollup-plugin"
  ]
}
